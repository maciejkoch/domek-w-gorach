---
import "./footer.scss";
const address = {
  locationHeader: "Lokalizacja",
  street: "ul.Fabryczna 7C",
  city: "44-293 Szczerbice",
  mapHeader: "Zobacz lokalizacjÄ™",
  mapLink: "https://goo.gl/maps/dpea1zRJBmDUNT129",
};

const contact = {
  contactHeader: "Kontakt",
  telLabel: "tel.",
  telHref: "tel:+48 505 505 505",
  telValue: "505 505 505",
  mailLabel: "e-mail:",
  mailHref: "mailto:domkinagranicy@gmail.com",
  mailValue: "domkinagranicy@gmail.com",
};
---

<footer id="contact" class="footer">
  <div class="footer__container">
    <h2>{address.locationHeader}</h2>
    <p class="footer__text">{address.street}</p>
    <p class="footer__text">{address.city}</p>
    <a class="footer__text footer__location-link" href={address.mapLink}
      >{address.mapHeader}</a
    >
  </div>
  <div class="footer__container">
    <h2>{contact.contactHeader}</h2>
    <p class="footer__text">
      <span>{contact.telLabel}</span>
      <a href={contact.telHref}>{contact.telValue}</a>
    </p>
    <p class="footer__text">
      <span>{contact.mailLabel}</span>
      <a href={contact.mailHref}>{contact.mailValue}</a>
    </p>
  </div>

  <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12571.629685765105!2d24.3052637!3d38.0259377!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a22d4ff0c3a3f1%3A0xde71fabede89fe5c!2sZastani%20beach!5e0!3m2!1spl!2spl!4v1685607056206!5m2!1spl!2spl"
    width="600"
    height="450"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</footer>
