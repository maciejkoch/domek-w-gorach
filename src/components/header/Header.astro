---
import "./header.scss";
import { Sprite } from "astro-icon";

const items = [
  {
    name: "Poznaj nas",
    link: "#aboutUs",
  },
  {
    name: "Galeria",
    link: "#gallery",
  },
  {
    name: "Oferta",
    link: "#ourOffer",
  },
  {
    name: "Atrakcje w pobliżu",
    link: "#touristAttractions",
  },
  {
    name: "Kontakt",
    link: "#contact",
  },
];

const bookingLink = "https://www.booking.com/Share-XVyKpL";
const airbnbLink =
  "https://www.airbnb.pl/rooms/947814500940059891?guests=1&adults=1&s=67&unique_share_id=62925a32-9165-4d34-8dd8-f9da3e757af8";
---

<header class="header">
  <div class="header__container">
    <div class="logo">
      <a class="link" href="#hero">
        <img src="/images/logo-dark.png" alt="page logo" />
      </a>
    </div>
    <nav class="navigation">
      <ul class="navigation__list">
        {
          items.map((item) => (
            <li class="navigation__item">
              <a
                href={item.link}
                class="navigation__link hover-underline-animation"
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div class="media-links-container">
      <a class="link" href={bookingLink}>
        <Sprite class="media-icon" name="tabler:brand-booking" />
      </a>
      <a class="link" href={airbnbLink}>
        <Sprite class="media-icon" name="tabler:brand-airbnb" />
      </a>
    </div>

    <div class="header__mobile-switch">
      <button
        class="mobile-menu-burger js-open-menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <Sprite name="mdi:menu" />
      </button>
    </div>
  </div>

  <div class="menu-container js-menu-container" id="mobile-menu">
    <button class="mobile-menu-closing-icon js-close-menu">
      <Sprite name="mdi:close" />
    </button>

    <div class="mobile-wrap">
      <div>
        <div class="mobile-menu">
          <ul>
            {
              items.map((item) => (
                <li class="mobile-menu__item">
                  <a
                    class="mobile-menu__link mobile-menu__link--active js-close-menu hover-mobile-animation"
                    href={item.link}
                  >
                    {item.name}
                  </a>
                </li>
              ))
            }
          </ul>

          <div class="mobile-menu__media-links-container">
            <h3 class="mobile-menu__media-links-headline">
              Znajdź nas i&nbsp;zarezerwuj swój pobyt na&nbsp;Booking.com
              lub&nbsp;Airbnb:
            </h3>
            <div class="mobile-menu__media-icons-wrap">
              <a
                class="mobile-menu__media-link"
                href="https://www.booking.com/Share-cw37iub"
              >
                <Sprite
                  class="mobile-menu__media-icon"
                  name="tabler:brand-booking"
                />
              </a>
              <a
                class="mobile-menu__media-link"
                href="https://www.airbnb.pl/rooms/947814500940059891?guests=1&adults=1&s=67&unique_share_id=62925a32-9165-4d34-8dd8-f9da3e757af8"
              >
                <Sprite
                  class="mobile-menu__media-icon"
                  name="tabler:brand-airbnb"
                />
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="mobile-menu__logo-wrap">
        <a class="link" href="./index.html">
          <img
            class="mobile-menu__logo"
            src="/images/logo-light.png"
            alt="mobile-menu page logo"
          />
        </a>
      </div>
    </div>
  </div>
</header>

<script src="./header.ts"></script>
