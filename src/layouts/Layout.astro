---
import { Sprite } from "astro-icon";

import Header from "../components/header/Header.astro";
import Footer from "../components/footer/Footer.astro";
import Analytics from "../components/analytics/Analytics.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/favicon-32x32.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;1,400;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <Analytics />
  </head>
  <body>
    <Sprite.Provider>
      <Header />
      <slot />
      <Footer />
    </Sprite.Provider>
    <style lang="scss" is:global>
      @import "../styles/reset.scss";
      @import "../styles/breakpoints.scss";

      :root {
        --font-family: "Lora", serif;
        --accent: 124, 58, 237;
        --dark-background-color: #7f6a52;
        --light-background-color: #eae7dd;
        --light-font-color: #f5f2e8;
        --dark-font-color: #564837;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );

        --header-height: 62px;
      }

      html {
        @include reset();
        font-family: var(--font-family);
        scroll-behavior: smooth;
        scroll-padding-top: var(--header-height);

        * {
          box-sizing: border-box;
        }
      }

      .container {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 20px;

        @include device(desktop) {
          max-width: 1050px;
        }
      }

      .section {
        padding: 40px 0;

        &--with-dark-background {
          background-color: var(--dark-background-color);
          color: var(--light-font-color);
        }

        &--with-light-background {
          background-color: var(--light-background-color);
          color: var(--dark-font-color);
        }
      }

      [astro-icon] {
        width: 40px;
        height: 40px;
      }
    </style>
  </body>
</html>
