---

<Layout title="Witaj w domku na granicy">
  <main>
    <Hero />

    <div id="aboutUs" class="section section--with-light-background">
      <AboutUs />
    </div>
    <div id="gallery" class="section">
      <Gallery />
    </div>

    <div id="ourOffer" class="section section--with-dark-background">
      <OurOffer />
    </div>

    <div id="touristAttractions" class="section">
      <TouristAttractions />
    </div>
  </main>
</Layout>

